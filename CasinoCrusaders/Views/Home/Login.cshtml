@model Entidades.EF.Usuario

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
	body {
		margin: 0;
		height: 100vh;
		overflow: hidden;
		background-color: #f5f5f5;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.login-container {
		height: 90vh;
		width: 100%;
		max-width: 1100px;
		display: flex;
		border-radius: 1rem;
		overflow: hidden;
		background-color: #ffffff;
	}

		.login-container:hover {
			box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
		}

	.left-image {
		background: url("/Imagenes/Login.png") no-repeat center center;
		background-size: cover;
	}

	.form-container {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.login-form {
		width: 100%;
		max-width: 400px;
	}

	}
</style>

<body>
	<div class="login-container">
		<div class="col-md-6 left-image"></div>

		<div class="col-md-6 col-12 form-container">
			<div class="login-form">
				<h2 class="text-center fw-bold mb-3">CASINO CRUSADERS</h2>
				<p class="text-center">Logueate aquí o <a asp-action="Registrar">Registrate</a> si no tenes una cuenta.</p>

				<div class="d-flex justify-content-between gap-2 mb-3">
					<button class="btn btn-light w-100 border">Google</button>
					<button class="btn btn-light w-100 border">Facebook</button>
				</div>

				<div class="text-center text-secondary mb-3 small">o</div>

				<form asp-action="Login">
					<div class="mb-3">
						<label asp-for="Gmail" class="form-label">Gmail</label>
						<input asp-for="Gmail" class="form-control" />
						<span asp-validation-for="Gmail" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Contraseña" class="form-label">Contraseña</label>
						<input asp-for="Contraseña" type="password" class="form-control" />
						<span asp-validation-for="Contraseña" class="text-danger"></span>
					</div>
					<div class="d-grid">
						<button type="submit" class="btn btn-primary">Entrar</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
