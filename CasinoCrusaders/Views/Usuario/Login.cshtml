@model Entidades.EF.Usuario  
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />  
<link rel="stylesheet" href="@Url.Content("~/css/Login.css")" />  
<body>  
	@if (TempData["ErrorVerificarEmail"] != null)  
	{  
		<div class="alert alert-success text-center">  
			@TempData["ErrorVerificarEmail"]  
		</div>  
	}  
	<div class="login-container">  
		<div class="col-md-6 left-image"></div>  

		<div class="col-md-6 col-12 form-container">  
			<div class="login-form" style="gap: 1rem;">  
				<h2 class="text-center fw-bold mb-3">CASINO CRUSADERS</h2>  
				<p class="text-center">Logueate aquí o <a asp-action="Registrar">Registrate</a> si no tenes una cuenta.</p>  

				<form asp-action="Login">  
					<div class="mb-3">  
						<label asp-for="NombreUsuario" class="form-label">Nombre de usuario</label>  
						<input asp-for="NombreUsuario" class="form-control" />  
						@if (TempData["ErrorLogin"] != null)  
						{  
							<div class="alert alert-success text-center">  
								@TempData["ErrorLogin"]  
							</div>  
						}  
					</div>  
					<div class="mb-3">  
						<label asp-for="Contraseña" class="form-label">Contraseña</label>  
						<input asp-for="Contraseña" type="password" class="form-control" />  
						@if (TempData["ErrorLogin"] != null)  
						{  
							<div class="alert alert-success text-center">  
								@TempData["ErrorLogin"]  
							</div>  
						}  
					</div>  
					<div class="d-grid">  
						<button type="submit" class="btn btn-primary">Entrar</button>  
					</div>  
				</form>  
					<a class="about" href="/SobreNosotros/Index">Sobre Nosotros</a>
			</div>  
		</div>  
	</div>  
</body>  

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
