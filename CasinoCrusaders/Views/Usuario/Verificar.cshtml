@model Entidades.EF.Usuario

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="@Url.Content("~/css/Login.css")" />
<body>
	<div class="login-container">
		<div class="col-md-6 left-image"></div>

		<div class="col-md-6 col-12 form-container">
			<div class="login-form">
				<h2 class="text-center fw-bold mb-3">CASINO CRUSADERS</h2>
				<p class="text-center">Logueate aquí o <a asp-action="Registrar">Registrate</a> si no tenes una cuenta.</p>

				
				<form asp-action="Login">
					<div class="mb-3">
							<input type="email" name="email" placeholder="Tu correo" required />
							<button type="submit">Reenviar verificación</button>				
					</div>
				</form>
			</div>
		</div>
	</div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
